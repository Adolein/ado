{
  "name": "ado",
  "private": true,
  "scripts": {
    "postinstall": "cp -r node_modules/module-alias backend/node/node_modules/module-alias",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend",
    "backend/node",
    "frontend",
    "frontend/nuxt"
  ]
}
